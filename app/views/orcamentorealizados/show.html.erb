
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h4>
      <!--Mensagens aqui-->
    <p id="notice"><%= notice %></p>
    </h4>
  </section>

   <!-- Main content -->
 <section class="content">
    <!-- Small boxes (Stat box) -->
       <div class="box box-primary">
             <div class="box-header with-border">
               <h3 class="box-title">Orçamento</h3>
              </div><!-- /.box-header -->             
      <form role="form">
         <div class="box-body">
          <p>
            <strong>Valor do Orçamento:</strong>
            <%=number_to_currency(@orcamentorealizado.valor_total, unit: "R$", separator: ",", delimiter: "")%>
          </p>
          <p>
            <strong>Cliente:</strong>
            <%= @orcamentorealizado.orcamentoempresa.orcamento.user.nome %>
          </p>

          <p>
            <strong>Mensagem:</strong>
            <%= @orcamentorealizado.mensagem %>
          </p>            
       </div><!-- /.box -->

        </div><!-- /.box-body -->
      </form>

<div class="btn-group">          
  <%= link_to edit_orcamentorealizado_path(@orcamentorealizado), :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-pencil"></span> Editar
  <% end %>
  <%= link_to orcamentorealizados_path, :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>       
</div>

</section>


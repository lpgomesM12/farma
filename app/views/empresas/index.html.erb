  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      <!--Mensagens aqui-->
      <%if notice %>
       <div class="alert alert-success alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4>  <i class="icon fa fa-check"></i>Mensagem</h4>
          <%= notice %>
      </div>
      <%end%>
    <!--<small></small>-->
    </h1>
  </section>

   <!-- Main content -->
 <section class="content">
    <!-- Small boxes (Stat box) -->
       <div class="box box-primary">
             <div class="box-header with-border">
               <h3 class="box-title">Lista de Empresas</h3>
              </div><!-- /.box-header --> 
      <div class="box-body table-responsive no-padding">             
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Razao Social</th>
                <th>CNPJ</th>
                <th>Informac√£o</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @empresas.each do |empresa| %>
                <tr>
                  <td><%= empresa.nome %></td>
                  <td><%= empresa.razaosocial %></td>
                  <td><%= empresa.cnpj %></td>
                  <td><%= empresa.informacao %></td>
                <td align='right'>
                  <div class="btn-group">
                      <%= link_to empresa, class: "btn btn-default btn-sm" do %>
                        <span class="glyphicon glyphicon-list-alt"></span> Exibir
                      <% end %>             
                      <%= link_to edit_empresa_path(empresa), class: "btn btn-default btn-sm" do %>
                        <span class="glyphicon glyphicon-pencil"></span> Editar
                      <% end %>
                     <%= link_to empresa, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, class: "btn btn-default btn-sm" do %>
                        <span class="glyphicon glyphicon-trash"></span> Excluir
                      <% end %> 
                  </div>
                  </td> 
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div><!-- /.box -->
           <%= link_to new_empresa_path, class: "btn btn-default btn-sm" do %>
                  <span class="glyphicon glyphicon-file"></span>Nova
          <% end %>
  </section>

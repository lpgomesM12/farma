
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h4>
      <!--Mensagens aqui-->
    <p id="notice"><%= notice %></p>
    </h4>
  </section>

   <!-- Main content -->
 <section class="content">
    <!-- Small boxes (Stat box) -->
       <div class="box box-primary">
             <div class="box-header with-border">
               <h3 class="box-title">Cadastrar Empresa</h3>
              </div><!-- /.box-header -->             
      <form role="form">
         <div class="box-body">
          <p>  
             <strong>Nome</strong>
              <%= @empresa.nome %>
          </p>
        
           <p>
              <strong>Razaosocial:</strong>
              <%= @empresa.razaosocial %>
            </p>

            <p>
              <strong>Cnpj:</strong>
              <%= @empresa.cnpj %>
            </p>

            <p>
              <strong>Informacao:</strong>
              <%= @empresa.informacao %>
            </p>
          
          <div class="row">  
            <div class="col-lg-2">
              <h4>Endereço</h4>
            </div>
           </div>
          
            <p>
              <strong>Endereco:</strong>
              <%= @empresa.endereco.endereco %>
            </p>
            
            <p>
              <strong>Cep:</strong>
              <%= @empresa.endereco.cep %>
            </p>

            <p>
              <strong>Número:</strong>
              <%= @empresa.endereco.numero %>
            </p>

            <p>
              <strong>Bairro:</strong>
              <%= @empresa.endereco.bairro.nome %>
            </p>

            <p>
              <strong>Cidade :</strong>
              <%= @empresa.endereco.cidade.nome_cidade %> - <%= @empresa.endereco.cidade.estado.sigl_estado %>
            </p>
            
       </div><!-- /.box -->
      </form>
    </div><!-- /.box-body -->


<div class="btn-group">          
  <%= link_to edit_empresa_path(@empresa), :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-pencil"></span> Editar
  <% end %>
  <%= link_to empresas_path, :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>       
</div>

</section>





<div class="panel panel-default">
  <div class="panel-body">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


<div class="row">
 <div class="col-lg-3">
 </div>

 <div class="col-lg-6">

 <h2>Cadastrar</h2>

  <div class="row">
   <div class="col-lg-12">
      <%= f.label :nome %><br />
      <%= f.text_field :nome, autofocus: true, :class => 'form-control' %>
    </div>
  </div>

  <div class="row">
      <div class="col-lg-12">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
    </div>
  </div>

  <div class="row">
      <div class="col-lg-12">
      <%= f.label :Senha %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
    </div>
   </div>

    <div class="row">
      <div class="col-lg-12">
        <%= f.label :confirme_senha %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
      </div>
    </div>

  <div class="row">
    <div class="col-lg-12">
          <%= f.label :Empresa %><br>
          <%= f.select :empresa_id, options_from_collection_for_select(Empresa.all, 'id', 'nome'), {:include_blank => true}, {:onchange => 'changeState(this)', :class => 'form-control' }%>
    </div>
  </div>


    <br>
<div class="row mar-bot40">
 <div class="col-lg-8" > 
  <div class="btn-group">
      <button type="submit" value="Submit" class="btn btn-primary btn-sm">
      <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
      </button>
   </div>
  </div>
</div>
   

  <% end %>




<%= render "users/shared/links" %>

    </div>
  </div>

    </div>
  </div>

